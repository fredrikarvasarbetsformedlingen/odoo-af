<?xml version="1.0"?>
<openerp>
    <data>
        <record id="project_issue_form_view" model="ir.ui.view">
            <field name="name">Project Issue Tracker Form inherited project_issue_sudo</field>
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue.project_issue_form_view" />
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <label for="sudo_id" />
                    <div>
                        <field name="sudo_id" class="oe_inline" context="{'default_use_issues':1}" domain="[('partner_id.commercial_partner_id', '=', partner_id), ('groups_id','not in', %(base.group_user)d)]" widget="selection" />
                        <button name="sudo_login" string="â‡’ Login as" type="object" class="oe_link" title="Log in this user with current session" groups="base.group_user" />
                        <button name="sudo_login_url" string="Login link" type="object" class="oe_highlight" title="Show log in link in a popup window" groups="base.group_user" />
                    </div>
                </field>
            </field>
        </record>
        <record id="sudo_login_url_form" model="ir.ui.view">
            <field name="name">Sudo Login Url</field>
            <field name="model">project.issue.sudo.login.url</field>
            <field name="arch" type="xml">
                <form>
                    <field name="sudo_login_url" />
                    <p>Copy the link above to an incognito tab or a new web browser to log in</p>
                </form>
            </field>
        </record>
    </data>
</openerp>
