        <field name="res_model">res.partner.jobs</field>
        <field name="view_mode">tree,pivot</field>
        <field name="view_id" ref="partner_jobs_view_tree"/>
    </record>

     <record id="partner_jobs_action_view_tree" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="partner_jobs_action"/>
        <field name="sequence" eval="2"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="partner_jobs_view_tree"/>
    </record>

