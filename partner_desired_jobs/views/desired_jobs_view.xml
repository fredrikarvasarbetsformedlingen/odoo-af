<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="partner_jobs_view_tree" model="ir.ui.view">
        <field name="name">res.partner.jobs.view.tree</field>
        <field name="model">res.partner.jobs</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <tree string="Desired jobs">
                <button class="oe_stat_button" type="action" name="%(base.action_partner_form_view1)d"/> 
                <field name="partner_id"/>
                <field name="ssyk_code" /> 
                <field name="name" options="{'no_create_edit': True}"/>  
                <field name="education"/>
                <field name="experience"/>
            </tree>
        </field>
    </record>

    
