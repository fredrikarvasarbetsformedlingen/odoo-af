<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form_for_links" model="ir.ui.view">
        <field name="name">view.res.partner.form.inherited.links</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button type="object" class="oe_stat_button" name="action_partner_link" context="{'default_partner_id': active_id}">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text"><center>Links</center></span>
                    </div>
                </button>
            </div>
            <xpath expr="//notebook" position="inside">
                <page name="partner_link" string="Links">
                    <field name="link_ids" nolabel="1" mode="kanban">
                        <kanban>
                            <field name="name"/>
                            <field name='id'/>
                            <field name='image'/>
                            <field name='link'/>
                            <templates>
                                <t t-name="kanban-box">
                                    <div class="o_kanban_record_has_image_fill o_res_partner_kanban">
                                        <a t-att-href="record.link.raw_value" target='new' t-if="record.link.raw_value">
                                            <div class="o_kanban_image">
                                                <img alt="" t-if="record.image.raw_value"
                                                     t-att-src="kanban_image('partner.links', 'image', record.id.raw_value)"/>
                                            </div>
                                            <div class="oe_kanban_details">
                                                <field name="name"/>

                                            </div>
                                        </a>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                        <!--<form>-->
                            <!--<group>-->
                                <!--<group>-->
                                    <!--<field name="name"/>-->
                                    <!--<field name="static_url_1"/>-->
                                    <!--<field name="inserted_field"-->
                                     <!--domain="[('model_id.model', '=', 'res.partner')]"/>-->
                                    <!--<field name="static_url_2"/>-->
                                <!--</group>-->
                                <!--<group>-->
                                    <!--<field name="target"/>-->
                                    <!--<field name="group_ids" widget="many2many_tags"/>-->
                                    <!--<field name="link"/>-->
                                    <!--<field name='image' widget='image' class='oe_avatar'/>-->
                                <!--</group>-->
                            <!--</group>-->
                        <!--</form>-->
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_partner_links_tree" model="ir.ui.view">
        <field name="name">view.res.partner.links.tree</field>
        <field name="model">partner.links</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="static_url_1"/>
                <field name="inserted_field" domain="[('model_id.model', '=', 'res.partner')]"/>
                <field name="static_url_2"/>
                <field name="target"/>
                <field name="group_ids"/>
                <field name="link"/>
                <field name="type_smart"/>
            </tree>
        </field>
    </record>

    <record id="view_partner_links_form" model="ir.ui.view">
        <field name="name">view.res.partner.links.form</field>
        <field name="model">partner.links</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="static_url_1"/>
                        <field name="inserted_field" domain="[('model_id.model', '=', 'res.partner')]"/>
                        <field name="static_url_2"/>
                        <field name="type_smart" widget='radio'/>
                    </group>
                    <group>
                        <field name="target"/>
                        <field name="group_ids" widget="many2many_tags"/>
                        <field name="link"/>
                        <field name="image" widget="image" class="oe_avatar"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="view_partner_links_kanban" model="ir.ui.view">
        <field name="name">view.res.partner.links.kanban</field>
        <field name="model">partner.links</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name='id'/>
                <field name='image'/>
                <field name='link'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record_has_image_fill o_res_partner_kanban">
                            <a t-att-href="record.link.raw_value" target='new' t-if="record.link.raw_value">
                            <div class="o_kanban_image">
                                <img alt="" t-if="record.image.raw_value"
                                     t-att-src="kanban_image('partner.links', 'image', record.id.raw_value)"/>
                            </div>
                            <div class="oe_kanban_details">
                                <field name="name"/>
                            </div>
                            </a>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>



    <record id="action_partner_links" model="ir.actions.act_window">
        <field name="name">Links</field>
        <field name="res_model">partner.links</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_partner_links_tab" model="ir.actions.act_window">
        <field name="name">Links</field>
        <field name="res_model">partner.links</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="action_partner_links" id="menu_partner_links" groups="group_partner_link"
              parent="contacts.menu_contacts" sequence="3" name="Links Administration"/>

</odoo>