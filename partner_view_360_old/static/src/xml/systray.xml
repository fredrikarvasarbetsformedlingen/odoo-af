<templates id="template" xml:space="preserve">

<t t-extend="mail.systray.ActivityMenu">
	<t t-jquery=".o_mail_systray_item" t-operation="replace">
       	 <li class="o_mail_systray_item" style="visibility:hidden">
            <a class="dropdown-toggle o-no-caret" data-toggle="dropdown"
               data-display="static" aria-expanded="false" title="Activitiessss" href="#" role="button">
                <i class="fa fa-clock-o" role="img" aria-label="Activitiessss"/>
                <span class="o_notification_counter badge badge-pill"/>
            </a>
            <div class="o_mail_systray_dropdown dropdown-menu dropdown-menu-right" role="menu">
                <div class="o_mail_systray_dropdown_items"/>
            </div>
        </li>
    </t>
</t>

<t t-extend="mail.systray.MessagingMenu">
	<t t-jquery=".o-no-caret" t-operation="replace">
       	<a class="dropdown-toggle o-no-caret" data-toggle="dropdown" style="visibility:hidden"
           data-display="static" aria-expanded="false" title="Conversations" href="#" role="button">
            <i class="fa fa-comments" role="img" aria-label="Messages"/> <span class="o_notification_counter badge badge-pill"/>
        </a>
    </t>
</t>

</templates>