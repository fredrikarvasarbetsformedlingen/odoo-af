<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="when_in_contact_search_jobseeker_form" model="ir.ui.view">
        <field name="name">search.jobseeker.wizard</field>
        <field name="model">contact.jobseeker.search.wizard</field>
        <field name="arch" type="xml">
            <form string="Search Partner" create="false">
                <h1>Search Jobseekers When in Contact</h1>
                <notebook>
                    <page string="When in contact">
                        <group>
                            <group>
                                <field name="identification"/>
                                <field name="social_sec_nr_search"/>
                            </group>
                        </group>
                        <group></group>
                        <button name="search_jobseeker" string="search" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </page>
                </notebook>
                <notebook>
                    <field name="employee_id" invisible="1"/>
                    <page name="jobseekers" string="My Jobseekers" groups="base.group_no_one">
                        <field name="jobseekers_ids">
                            <tree>
                                <field name="social_sec_nr"/>
                                <field name="customer_id"/>
                                <field name="name"/>
                                <field name="city"/>
                                <field name="office_id"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <act_window id="when_in_contact_search_jobseeker_wizard"
                name="Search Partner"
                src_model="hr.employee"
                res_model="contact.jobseeker.search.wizard"
                view_mode="form"
                target="inline"
                key2="client_action_multi"/>

    <menuitem id="when_in_contact_jobseeker_search_wizard_menu"
              name="When in Contact"
              action="when_in_contact_search_jobseeker_wizard"
              parent="res_partner_jobseeker_search_wizard_menu"
              sequence="4"/>


</odoo>
